<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp">


    <EditText
        android:id="@+id/txtControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numero de control"
        android:inputType="number"/>

    <EditText
        android:id="@+id/txtU1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Calificaci贸n Unidad 1"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtU2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Calificaci贸n Unidad 2"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtU3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Calificaci贸n Unidad 3"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtU4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Calificaci贸n Unidad 4"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtU5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Calificaion Unidad 5"
        android:inputType="number" />

    <Button
        android:id="@+id/btnPermisos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dar Permisos" />

    <Button
        android:id="@+id/btnInsertar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insertar" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtCal"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>